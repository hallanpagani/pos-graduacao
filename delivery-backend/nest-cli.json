{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "projects": {
    "@app": {
      "type": "library",
      "root": "libs/@app",
      "entryFile": "index",
      "sourceRoot": "libs/@app/src",
      "compilerOptions": {
        "tsConfigPath": "libs/@app/tsconfig.lib.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}